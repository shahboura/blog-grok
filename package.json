{
  "name": "density-dwarf",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && npm run generate-search-index",
    "preview": "astro preview",
    "astro": "astro",
    "generate-search-index": "node scripts/generate-search-index.js",
    "validate:types": "astro check",
    "validate:markdown": "markdownlint src/content/blog/**/*.md --config .markdownlint.json",
    "validate:links": "node scripts/validate-links.js",
    "validate:frontmatter": "node scripts/validate-frontmatter.js",
    "validate:all": "npm run validate:types && npm run validate:markdown && npm run validate:links && npm run validate:frontmatter",
    "analyze": "npx astro build --analyze",
    "pre-commit": "npm run validate:all"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@expressive-code/plugin-shiki": "^0.41.5",
    "astro": "^5.16.6",
    "astro-expressive-code": "^0.41.5",
    "fuse.js": "^7.1.0",
    "ionicons": "^8.0.13",
    "mdast-util-to-string": "^4.0.0",
    "reading-time": "^1.5.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.39.0",
    "typescript": "^5.9.3"
  }
}
