---
// SearchModal.astro - Modal component for search functionality
import { CATEGORIES, DIFFICULTY_LEVELS } from '../config';
import { searchOutline, close, search } from 'ionicons/icons';
---

<div id="search-modal" class="search-modal">
  <div class="search-modal-overlay" id="search-modal-overlay"></div>
  <div class="search-modal-content">
    <div class="search-modal-header">
      <div class="search-input-container">
        <ion-icon name="search-outline" class="search-icon" aria-hidden="true"></ion-icon>
        <input
          type="text"
          id="search-input"
          placeholder="Search posts... (Ctrl+K)"
          class="search-input"
          autocomplete="off"
        />
        <button id="search-close" class="search-close-btn" aria-label="Close search">
          <ion-icon name="close" aria-hidden="true"></ion-icon>
        </button>
      </div>

      <div class="search-filters">
        <select id="category-filter" class="filter-select">
          <option value="">All Categories</option>
          {CATEGORIES.map(cat => (
            <option value={cat.name}>{cat.name}</option>
          ))}
        </select>

        <select id="difficulty-filter" class="filter-select">
          <option value="">All Levels</option>
          {DIFFICULTY_LEVELS.map(level => (
            <option value={level}>{level.charAt(0).toUpperCase() + level.slice(1)}</option>
          ))}
        </select>
      </div>
    </div>

    <div id="search-results" class="search-results">
       <div class="search-empty-state">
        <ion-icon name="search" size="large" aria-hidden="true"></ion-icon>
        <p>Start typing to search posts...</p>
      </div>
    </div>
  </div>
</div>

<script>
  import Fuse from 'fuse.js';

  class SearchModal {
    private modal: HTMLElement;
    private overlay: HTMLElement;
    private input: HTMLInputElement;
    private closeBtn: HTMLElement;
    private resultsContainer: HTMLElement;
    private categoryFilter: HTMLSelectElement;
    private difficultyFilter: HTMLSelectElement;
    private fuse: Fuse<any> | null = null;
    private searchIndex: any[] = [];
    private currentFocusIndex: number = -1;

    constructor() {
      this.modal = document.getElementById('search-modal')!;
      this.overlay = document.getElementById('search-modal-overlay')!;
      this.input = document.getElementById('search-input') as HTMLInputElement;
      this.closeBtn = document.getElementById('search-close')!;
      this.resultsContainer = document.getElementById('search-results')!;
      this.categoryFilter = document.getElementById('category-filter') as HTMLSelectElement;
      this.difficultyFilter = document.getElementById('difficulty-filter') as HTMLSelectElement;

      this.init();
    }

    private async init() {
      // Load search index
      try {
        const response = await fetch('/search-index.json');
        this.searchIndex = await response.json();

        // Initialize Fuse.js
        this.fuse = new Fuse(this.searchIndex, {
          keys: [
            { name: 'title', weight: 0.4 },
            { name: 'description', weight: 0.3 },
            { name: 'excerpt', weight: 0.2 },
            { name: 'content', weight: 0.1 },
            { name: 'tags', weight: 0.1 }
          ],
          threshold: 0.3,
          includeScore: true,
          includeMatches: true
        });
      } catch (error) {
        console.error('Failed to load search index:', error);
      }

      this.setupEventListeners();
    }

    private setupEventListeners() {
      // Open modal
      document.addEventListener('search-modal-open', () => this.open());

      // Close modal
      this.overlay.addEventListener('click', () => this.close());
      this.closeBtn.addEventListener('click', () => this.close());

       // Keyboard shortcuts
       document.addEventListener('keydown', (e) => {
         if (e.key === 'Escape' && this.modal.classList.contains('active')) {
           this.close();
         }
         if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
           e.preventDefault();
           this.open();
         }
         // Arrow key navigation in results
         if (this.modal.classList.contains('active') && (e.key === 'ArrowDown' || e.key === 'ArrowUp')) {
           e.preventDefault();
           this.navigateResults(e.key === 'ArrowDown' ? 1 : -1);
         }
         if (this.modal.classList.contains('active') && e.key === 'Enter') {
           const focusedResult = this.resultsContainer.querySelector('.search-result-focused') as HTMLElement;
           if (focusedResult) {
             focusedResult.click();
           }
         }
       });

      // Search input
      this.input.addEventListener('input', () => this.performSearch());

      // Filters
      this.categoryFilter.addEventListener('change', () => this.performSearch());
      this.difficultyFilter.addEventListener('change', () => this.performSearch());
    }

    private open() {
      this.modal.classList.add('active');
      // Focus input after modal animation completes
      setTimeout(() => {
        this.input.focus();
        this.input.select(); // Select all text for better UX
      }, 100);
      document.body.style.overflow = 'hidden';
    }

    private close() {
      this.modal.classList.remove('active');
      this.input.value = '';
      this.categoryFilter.value = '';
      this.difficultyFilter.value = '';
      this.showEmptyState();
      document.body.style.overflow = '';
    }

    private performSearch() {
      if (!this.fuse) return;

      const query = this.input.value.trim();
      const categoryFilter = this.categoryFilter.value;
      const difficultyFilter = this.difficultyFilter.value;

      if (!query && !categoryFilter && !difficultyFilter) {
        this.showEmptyState();
        return;
      }

      // Show loading state
      this.showLoadingState();

      // Perform search with small delay for better UX
      setTimeout(() => {
        let results = this.searchIndex;

        // Apply text search if query exists
        if (query) {
          const searchResults = this.fuse!.search(query);
          results = searchResults.map(result => result.item);
        }

        // Apply category filter
        if (categoryFilter) {
          results = results.filter(post => post.category === categoryFilter);
        }

        // Apply difficulty filter
        if (difficultyFilter) {
          results = results.filter(post => post.difficulty === difficultyFilter);
        }

        this.displayResults(results);
      }, 100);
    }

    private showEmptyState() {
      this.resultsContainer.innerHTML = `
        <div class="search-empty-state">
          <ion-icon name="search" size="large" aria-hidden="true"></ion-icon>
          <p>Start typing to search posts...</p>
        </div>
      `;
    }

    private showLoadingState() {
      this.resultsContainer.innerHTML = `
      <div class="search-empty-state">
        <ion-icon name="search" size="large" aria-hidden="true"></ion-icon>
        <p>Searching...</p>
      </div>
      `;
    }

    private displayResults(results: any[]) {
      if (results.length === 0) {
        this.resultsContainer.innerHTML = `
          <div class="search-empty-state">
            <ion-icon name="search" size="large" aria-hidden="true"></ion-icon>
            <p>No posts found matching your search.</p>
          </div>
        `;
        return;
      }

      const resultsHtml = results.map((post, index) => `
        <a href="/blog/${post.slug}/" class="search-result-item" data-index="${index}" tabindex="0">
          <div class="search-result-content">
            <h3 class="search-result-title">${this.highlightQuery(post.title, this.input.value)}</h3>
            <p class="search-result-excerpt">${post.excerpt}</p>
            <div class="search-result-meta">
              <span class="search-result-category">${post.category}</span>
              ${post.difficulty ? `<span class="search-result-difficulty">${post.difficulty}</span>` : ''}
              <span class="search-result-date">${new Date(post.pubDate).toLocaleDateString()}</span>
            </div>
          </div>
        </a>
      `).join('');

      this.resultsContainer.innerHTML = resultsHtml;
      this.currentFocusIndex = -1;
    }

    private navigateResults(direction: number) {
      const results = this.resultsContainer.querySelectorAll('.search-result-item');
      if (results.length === 0) return;

      // Remove previous focus
      const prevFocused = this.resultsContainer.querySelector('.search-result-focused');
      if (prevFocused) {
        prevFocused.classList.remove('search-result-focused');
      }

      // Calculate new focus index
      this.currentFocusIndex = Math.max(0, Math.min(results.length - 1, this.currentFocusIndex + direction));

      // Add focus to new item
      const newFocused = results[this.currentFocusIndex] as HTMLElement;
      newFocused.classList.add('search-result-focused');
      newFocused.focus();
    }

    private highlightQuery(text: string, query: string): string {
      if (!query) return text;
      const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
      return text.replace(regex, '<mark>$1</mark>');
    }
  }

  // Initialize search modal when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new SearchModal();
  });
</script>

<style>
  .search-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease-in-out, visibility 0.2s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .search-modal.active {
    opacity: 1;
    visibility: visible;
  }

  .search-modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

   .search-modal-content {
     position: relative;
     width: 90%;
     max-width: 700px;
     max-height: 75vh;
     background: rgb(var(--gray-light));
     border-radius: 16px;
     box-shadow: 0 25px 80px rgba(var(--black), 0.25);
     overflow: hidden;
     z-index: 1001;
     display: flex;
     flex-direction: column;
     border: 1px solid rgb(var(--gray));
   }

  [data-theme="dark"] .search-modal-content {
    background: rgb(var(--gray));
    box-shadow: 0 20px 60px rgba(var(--black), 0.5);
  }

  .search-modal-header {
    padding: 1.5rem;
    border-bottom: 1px solid rgb(var(--gray));
    flex-shrink: 0;
  }

  .search-input-container {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    width: 1.25rem;
    height: 1.25rem;
    color: rgb(var(--gray-dark));
    pointer-events: none;
    z-index: 1;
  }

   .search-input {
     width: 100%;
     padding: 1rem 3.5rem 1rem 3rem;
     border: 2px solid rgb(var(--gray));
     border-radius: 12px;
     font-size: 1.1rem;
     font-weight: 500;
     background: white;
     color: rgb(var(--black));
     outline: none;
     transition: all 0.2s ease;
     box-sizing: border-box;
   }

  .search-input:focus {
    border-color: rgb(var(--accent));
    box-shadow: 0 0 0 3px rgba(var(--accent), 0.15);
  }

  .search-input::placeholder {
    color: rgb(var(--gray));
    opacity: 0.7;
  }

  [data-theme="dark"] .search-input {
    background: rgb(var(--gray-dark));
    color: rgb(var(--gray-light));
    border-color: rgb(var(--gray));
  }

  [data-theme="dark"] .search-input:focus {
    box-shadow: 0 0 0 3px rgba(var(--accent), 0.2);
  }

  .search-close-btn {
    position: absolute;
    right: 0.75rem;
    width: 2.25rem;
    height: 2.25rem;
    border: 1px solid transparent;
    background: transparent;
    color: rgb(var(--gray));
    cursor: pointer;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    z-index: 1;
  }

  .search-close-btn:hover {
    background: rgb(var(--gray-light));
    color: rgb(var(--black));
    border-color: rgb(var(--gray));
  }

  [data-theme="dark"] .search-close-btn:hover {
    background: rgb(var(--gray));
    color: rgb(var(--gray-light));
    border-color: rgb(var(--gray));
  }

  .search-filters {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .filter-select {
    flex: 1;
    padding: 0.5rem 0.75rem;
    border: 1px solid rgb(var(--gray));
    border-radius: 6px;
    background: white;
    color: rgb(var(--black));
    font-size: 0.875rem;
    font-weight: 500;
    outline: none;
    transition: all 0.2s ease;
    cursor: pointer;
    min-height: 2.25rem;
  }

  .filter-select:focus {
    border-color: rgb(var(--accent));
    box-shadow: 0 0 0 2px rgba(var(--accent), 0.15);
  }

  .filter-select:hover {
    border-color: rgb(var(--gray-dark));
  }

  [data-theme="dark"] .filter-select {
    background: rgb(var(--gray-dark));
    color: rgb(var(--gray-light));
    border-color: rgb(var(--gray));
  }

  [data-theme="dark"] .filter-select:hover {
    border-color: rgb(var(--gray-light));
  }

  .search-results {
    flex: 1;
    overflow-y: auto;
    max-height: calc(80vh - 200px);
  }

  .search-empty-state {
    padding: 3rem 1.5rem;
    text-align: center;
    color: rgb(var(--gray-dark));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 200px;
  }

  .search-empty-state svg {
    width: 2.5rem;
    height: 2.5rem;
    margin-bottom: 1rem;
    opacity: 0.5;
    stroke-width: 1.5;
  }

  .search-empty-state p {
    margin: 0;
    font-size: 1rem;
    font-weight: 500;
  }

  [data-theme="dark"] .search-empty-state {
    color: rgb(var(--gray));
  }

  .search-loading-spinner {
    width: 2rem;
    height: 2rem;
    border: 2px solid rgb(var(--gray));
    border-top: 2px solid rgb(var(--accent));
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 1.5rem;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .search-result-item {
    display: block;
    padding: 0.75rem 1.25rem;
    border-bottom: 1px solid rgb(var(--gray));
    text-decoration: none;
    transition: all 0.15s ease;
    position: relative;
  }

  .search-result-item:hover,
  .search-result-item:focus,
  .search-result-item.search-result-focused {
    background: rgba(var(--accent), 0.06);
    outline: 2px solid rgba(var(--accent), 0.3);
    outline-offset: -2px;
  }

  [data-theme="dark"] .search-result-item:hover,
  [data-theme="dark"] .search-result-item:focus,
  [data-theme="dark"] .search-result-item.search-result-focused {
    background: rgba(var(--accent), 0.08);
  }

  .search-result-item:last-child {
    border-bottom: none;
  }

  .search-result-content {
    padding: 0.5rem 0;
  }

  .search-result-title {
    margin: 0 0 0.375rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: rgb(var(--black));
    line-height: 1.4;
    display: block;
  }

  [data-theme="dark"] .search-result-title {
    color: rgb(var(--gray-light));
  }

  .search-result-title mark {
    background: rgba(var(--accent), 0.15);
    color: rgb(var(--black));
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
    font-weight: 700;
  }

  [data-theme="dark"] .search-result-title mark {
    background: rgba(var(--accent), 0.2);
    color: rgb(var(--gray-light));
  }

  .search-result-excerpt {
    margin: 0 0 0.5rem 0;
    color: rgb(var(--gray-dark));
    font-size: 0.8125rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  [data-theme="dark"] .search-result-excerpt {
    color: rgb(var(--gray));
  }

  .search-result-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.6875rem;
    flex-wrap: wrap;
  }

  .search-result-category {
    background: rgb(var(--accent));
    color: white;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .search-result-difficulty {
    background: rgb(var(--gray));
    color: rgb(var(--black));
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: capitalize;
  }

  [data-theme="dark"] .search-result-difficulty {
    background: rgb(var(--gray-light));
    color: rgb(var(--gray-dark));
  }

  .search-result-date {
    color: rgb(var(--gray-dark));
    font-weight: 500;
    margin-left: auto;
  }

  [data-theme="dark"] .search-result-date {
    color: rgb(var(--gray));
  }

  /* Mobile styles */
  @media (max-width: 640px) {
    .search-modal-content {
      width: 95%;
      max-height: 90vh;
      margin: 1rem;
      border-radius: 12px;
    }

    .search-modal-header {
      padding: 1.25rem;
    }

    .search-input {
      font-size: 16px; /* Prevents zoom on iOS */
    }

    .search-filters {
      flex-direction: column;
      gap: 0.5rem;
    }

    .filter-select {
      width: 100%;
    }

    .search-results {
      max-height: calc(90vh - 220px);
    }

    .search-result-item {
      padding: 1rem;
    }

    .search-result-meta {
      gap: 0.5rem;
    }

    .search-result-date {
      margin-left: 0;
      margin-top: 0.25rem;
      width: 100%;
    }
  }

  /* Focus management */
  .search-modal.active .search-input {
    animation: focusIn 0.2s ease-out;
  }

  @keyframes focusIn {
    from {
      opacity: 0;
      transform: scale(0.98);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Scrollbar styling */
  .search-results::-webkit-scrollbar {
    width: 6px;
  }

  .search-results::-webkit-scrollbar-track {
    background: transparent;
  }

  .search-results::-webkit-scrollbar-thumb {
    background: rgb(var(--gray));
    border-radius: 3px;
  }

  .search-results::-webkit-scrollbar-thumb:hover {
    background: rgb(var(--gray-dark));
  }

  [data-theme="dark"] .search-results::-webkit-scrollbar-thumb {
    background: rgb(var(--gray-light));
  }

  [data-theme="dark"] .search-results::-webkit-scrollbar-thumb:hover {
    background: rgb(var(--gray-dark));
  }
</style>