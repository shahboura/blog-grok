---
// SearchModal.astro - Modern search modal component
import { CATEGORIES, DIFFICULTY_LEVELS } from '../config';
import { searchOutline, close, search } from 'ionicons/icons';
---

<div id="search-modal" class="search-modal">
  <!-- Backdrop -->
  <div class="search-backdrop" id="search-modal-overlay"></div>

  <!-- Modal Container -->
  <div class="search-container">
    <!-- Search Header -->
    <div class="search-header">
      <div class="search-input-wrapper">
        <div class="search-input-container">
          <ion-icon name="search-outline" class="search-icon" aria-hidden="true"></ion-icon>
          <input
            type="text"
            id="search-input"
            placeholder="Search posts..."
            class="search-input"
            autocomplete="off"
          />
          <button id="search-close" class="search-close-btn" aria-label="Close search">
            <ion-icon name="close" aria-hidden="true"></ion-icon>
          </button>
        </div>
      </div>

      <!-- Search Filters -->
      <div class="search-filters">
        <select id="category-filter" class="filter-select">
          <option value="">All Categories</option>
          {CATEGORIES.map(cat => (
            <option value={cat.name}>{cat.name}</option>
          ))}
        </select>

        <select id="difficulty-filter" class="filter-select">
          <option value="">All Levels</option>
          {DIFFICULTY_LEVELS.map(level => (
            <option value={level}>{level.charAt(0).toUpperCase() + level.slice(1)}</option>
          ))}
        </select>
      </div>
    </div>

    <!-- Search Results -->
    <div id="search-results" class="search-results">
      <div class="search-empty-state">
        <div class="empty-state-icon">
          <ion-icon name="search" aria-hidden="true"></ion-icon>
        </div>
        <h3 class="empty-state-title">Search posts</h3>
        <p class="empty-state-description">Start typing to find what you're looking for</p>
      </div>
    </div>
  </div>
</div>

<script>
  import Fuse from 'fuse.js';

  class SearchModal {
    private modal: HTMLElement;
    private overlay: HTMLElement;
    private input: HTMLInputElement;
    private closeBtn: HTMLElement;
    private resultsContainer: HTMLElement;
    private categoryFilter: HTMLSelectElement;
    private difficultyFilter: HTMLSelectElement;
    private fuse: Fuse<any> | null = null;
    private searchIndex: any[] = [];
    private currentFocusIndex: number = -1;

    constructor() {
      this.modal = document.getElementById('search-modal')!;
      this.overlay = document.getElementById('search-modal-overlay')!;
      this.input = document.getElementById('search-input') as HTMLInputElement;
      this.closeBtn = document.getElementById('search-close')!;
      this.resultsContainer = document.getElementById('search-results')!;
      this.categoryFilter = document.getElementById('category-filter') as unknown as HTMLSelectElement;
      this.difficultyFilter = document.getElementById('difficulty-filter') as unknown as HTMLSelectElement;

      this.init();
    }

    private async init() {
      // Load search index
      try {
        const response = await fetch('/search-index.json');
        this.searchIndex = await response.json();

        // Initialize Fuse.js
        this.fuse = new Fuse(this.searchIndex, {
          keys: [
            { name: 'title', weight: 0.4 },
            { name: 'description', weight: 0.3 },
            { name: 'excerpt', weight: 0.2 },
            { name: 'content', weight: 0.1 },
            { name: 'tags', weight: 0.1 }
          ],
          threshold: 0.3,
          includeScore: true,
          includeMatches: true
        });
      } catch (error) {
        console.error('Failed to load search index:', error);
      }

      this.setupEventListeners();
    }

    private setupEventListeners() {
      // Open modal
      document.addEventListener('search-modal-open', () => this.open());

      // Close modal
      this.overlay.addEventListener('click', () => this.close());
      this.closeBtn.addEventListener('click', () => this.close());

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.close();
          }
          if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
            e.preventDefault();
            this.open();
          }
          // Arrow key navigation in results
          if (this.modal.classList.contains('active') && (e.key === 'ArrowDown' || e.key === 'ArrowUp')) {
            e.preventDefault();
            this.navigateResults(e.key === 'ArrowDown' ? 1 : -1);
          }
          if (this.modal.classList.contains('active') && e.key === 'Enter') {
            const focusedResult = this.resultsContainer.querySelector('.search-result-focused') as HTMLElement;
            if (focusedResult) {
              focusedResult.click();
            }
          }
        });

      // Theme change listener
      document.addEventListener('theme-changed', () => {
        // Theme changes are handled via CSS data attributes, no JavaScript action needed
        // This listener ensures we can add any dynamic theme-related logic if needed
      });

      // Real-time search input (with debounce)
      let searchTimeout: any;
      this.input.addEventListener('input', () => {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => this.performSearch(), 150);
      });

      // Filters
      this.categoryFilter.addEventListener('change', () => this.performSearch());
      this.difficultyFilter.addEventListener('change', () => this.performSearch());
    }

    private open() {
      this.modal.classList.add('active');
      // Focus input after modal animation completes
      setTimeout(() => {
        this.input.focus();
        this.input.select(); // Select all text for better UX
      }, 100);
      document.body.style.overflow = 'hidden';
    }

    private close() {
      this.modal.classList.remove('active');
      this.input.value = '';
      this.categoryFilter.value = '';
      this.difficultyFilter.value = '';
      this.showEmptyState();
      document.body.style.overflow = '';
    }

    private performSearch() {
      if (!this.fuse) return;

      const query = this.input.value.trim();
      const categoryFilter = this.categoryFilter.value;
      const difficultyFilter = this.difficultyFilter.value;

      if (!query && !categoryFilter && !difficultyFilter) {
        this.showEmptyState();
        return;
      }

      // Show loading state
      this.showLoadingState();

      // Perform search with small delay for better UX
      setTimeout(() => {
        let results = this.searchIndex;

        // Apply text search if query exists
        if (query) {
          const searchResults = this.fuse!.search(query);
          results = searchResults.map(result => result.item);
        }

        // Apply category filter
        if (categoryFilter) {
          results = results.filter(post => post.category === categoryFilter);
        }

        // Apply difficulty filter
        if (difficultyFilter) {
          results = results.filter(post => post.difficulty === difficultyFilter);
        }

        this.displayResults(results);
      }, 50);
    }

    private showEmptyState() {
      this.resultsContainer.innerHTML = `
        <div class="search-empty-state">
          <ion-icon name="search" size="large" aria-hidden="true"></ion-icon>
          <p>Start typing to search posts...</p>
        </div>
      `;
    }

    private showLoadingState() {
      this.resultsContainer.innerHTML = `
      <div class="search-empty-state">
        <ion-icon name="search" size="large" aria-hidden="true"></ion-icon>
        <p>Searching...</p>
      </div>
      `;
    }

    private displayResults(results: any[]) {
      if (results.length === 0) {
        this.resultsContainer.innerHTML = `
          <div class="search-empty-state">
            <div class="empty-state-icon">
              <ion-icon name="search" aria-hidden="true"></ion-icon>
            </div>
            <h3 class="empty-state-title">No results found</h3>
            <p class="empty-state-description">Try adjusting your search terms or filters</p>
          </div>
        `;
        return;
      }

      const resultsHtml = results.map((post, index) => `
        <a href="/blog/${post.slug}/" class="search-result-item" data-index="${index}" tabindex="0">
          <div class="search-result-content">
            <div class="search-result-title">${this.highlightQuery(post.title, this.input.value)}</div>
            <div class="search-result-excerpt">${post.excerpt}</div>
            <div class="search-result-meta">
              <span class="search-result-category">${post.category}</span>
              ${post.difficulty ? `<span class="search-result-difficulty">${post.difficulty}</span>` : ''}
              <span class="search-result-date">${new Date(post.pubDate).toLocaleDateString()}</span>
            </div>
          </div>
        </a>
      `).join('');

      this.resultsContainer.innerHTML = resultsHtml;
      this.currentFocusIndex = -1;
    }

    private navigateResults(direction: number) {
      const results = this.resultsContainer.querySelectorAll('.search-result-item');
      if (results.length === 0) return;

      // Remove previous focus
      const prevFocused = this.resultsContainer.querySelector('.search-result-focused');
      if (prevFocused) {
        prevFocused.classList.remove('search-result-focused');
      }

      // Calculate new focus index
      this.currentFocusIndex = Math.max(0, Math.min(results.length - 1, this.currentFocusIndex + direction));

      // Add focus to new item
      const newFocused = results[this.currentFocusIndex] as HTMLElement;
      newFocused.classList.add('search-result-focused');
      newFocused.focus();
    }

    private highlightQuery(text: string, query: string): string {
      if (!query) return text;
      const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
      return text.replace(regex, '<mark>$1</mark>');
    }
  }

  // Initialize search modal when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new SearchModal();
  });
</script>

<style>
  /* ===== MODAL BACKDROP ===== */
  .search-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.25s cubic-bezier(0.4, 0, 0.2, 1), visibility 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .search-modal.active {
    opacity: 1;
    visibility: visible;
  }

  .search-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  /* ===== MODAL CONTAINER ===== */
  .search-container {
    position: relative;
    width: 100%;
    max-width: 600px;
    max-height: calc(100vh - 4rem);
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    overflow: hidden;
    z-index: 1001;
    display: flex;
    flex-direction: column;
  }

  [data-theme="dark"] .search-container {
    background: rgb(17, 24, 39);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
  }

  /* ===== SEARCH HEADER ===== */
  .search-header {
    padding: 1.5rem;
    border-bottom: 1px solid rgb(229, 231, 235);
  }

  [data-theme="dark"] .search-header {
    border-bottom-color: rgb(55, 65, 81);
  }

  /* ===== SEARCH INPUT ===== */
  .search-input-wrapper {
    margin-bottom: 1rem;
  }

  .search-input-container {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    width: 1.25rem;
    height: 1.25rem;
    color: rgb(107, 114, 128);
    pointer-events: none;
    z-index: 1;
  }

  .search-input {
    width: 100%;
    padding: 0.875rem 3rem 0.875rem 3rem;
    border: 1px solid rgb(229, 231, 235);
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 500;
    background: rgb(249, 250, 251);
    color: rgb(17, 24, 39);
    outline: none;
    transition: all 0.2s ease;
    box-sizing: border-box;
  }

  .search-input:focus {
    background: white;
    border-color: rgb(var(--accent));
    box-shadow: 0 0 0 3px rgba(var(--accent), 0.1);
  }

  .search-input::placeholder {
    color: rgb(156, 163, 175);
  }

  [data-theme="dark"] .search-input {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
    color: rgb(243, 244, 246);
  }

  [data-theme="dark"] .search-input:focus {
    background: rgb(17, 24, 39);
    border-color: rgb(var(--accent));
    box-shadow: 0 0 0 3px rgba(var(--accent), 0.2);
  }

  [data-theme="dark"] .search-input::placeholder {
    color: rgb(107, 114, 128);
  }

  .search-close-btn {
    position: absolute;
    right: 0.75rem;
    width: 2rem;
    height: 2rem;
    border: none;
    background: transparent;
    color: rgb(107, 114, 128);
    cursor: pointer;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.15s ease;
    z-index: 1;
  }

  .search-close-btn:hover {
    background: rgb(243, 244, 246);
    color: rgb(17, 24, 39);
  }

  [data-theme="dark"] .search-close-btn:hover {
    background: rgb(55, 65, 81);
    color: rgb(243, 244, 246);
  }

  /* ===== SEARCH FILTERS ===== */
  .search-filters {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .filter-select {
    flex: 1;
    padding: 0.5rem 0.75rem;
    border: 1px solid rgb(229, 231, 235);
    border-radius: 8px;
    background: white;
    color: rgb(17, 24, 39);
    font-size: 0.875rem;
    font-weight: 500;
    outline: none;
    transition: all 0.15s ease;
    cursor: pointer;
    min-height: 2.25rem;
  }

  .filter-select:focus {
    border-color: rgb(var(--accent));
    box-shadow: 0 0 0 3px rgba(var(--accent), 0.1);
  }

  .filter-select:hover {
    border-color: rgb(156, 163, 175);
  }

  [data-theme="dark"] .filter-select {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
    color: rgb(243, 244, 246);
  }

  [data-theme="dark"] .filter-select:hover {
    border-color: rgb(107, 114, 128);
  }

  [data-theme="dark"] .filter-select:focus {
    border-color: rgb(var(--accent));
    box-shadow: 0 0 0 3px rgba(var(--accent), 0.2);
  }

  /* ===== SEARCH RESULTS ===== */
  .search-results {
    flex: 1;
    overflow-y: auto;
    padding: 0.5rem;
  }

  /* ===== EMPTY STATE ===== */
  .search-empty-state {
    padding: 3rem 1.5rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 300px;
  }

  .empty-state-icon {
    width: 3rem;
    height: 3rem;
    color: rgb(156, 163, 175);
    margin-bottom: 1rem;
  }

  [data-theme="dark"] .empty-state-icon {
    color: rgb(107, 114, 128);
  }

  .empty-state-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: rgb(17, 24, 39);
  }

  [data-theme="dark"] .empty-state-title {
    color: rgb(243, 244, 246);
  }

  .empty-state-description {
    margin: 0;
    font-size: 0.875rem;
    color: rgb(107, 114, 128);
    max-width: 300px;
  }

  /* ===== SEARCH RESULT ITEMS ===== */
  .search-result-item {
    display: block;
    text-decoration: none;
    margin-bottom: 0.5rem;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.15s ease;
  }

  .search-result-item:hover,
  .search-result-item:focus,
  .search-result-item.search-result-focused {
    outline: none;
  }

  .search-result-content {
    padding: 1rem;
    background: rgb(249, 250, 251);
    border: 1px solid rgb(229, 231, 235);
    transition: all 0.15s ease;
    cursor: pointer;
  }

  .search-result-item:hover .search-result-content {
    background: rgb(243, 244, 246);
    border-color: rgb(209, 213, 219);
    transform: translateY(-1px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  [data-theme="dark"] .search-result-content {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
  }

  [data-theme="dark"] .search-result-item:hover .search-result-content {
    background: rgb(55, 65, 81);
    border-color: rgb(75, 85, 99);
  }

  /* ===== RESULT TITLE ===== */
  .search-result-title {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: rgb(17, 24, 39);
    line-height: 1.4;
    display: block;
  }

  [data-theme="dark"] .search-result-title {
    color: rgb(243, 244, 246);
  }

  .search-result-title mark {
    background: rgba(var(--accent), 0.15);
    color: rgb(var(--accent-dark));
    padding: 0.125rem 0.25rem;
    border-radius: 4px;
    font-weight: 700;
  }

  [data-theme="dark"] .search-result-title mark {
    background: rgba(var(--accent), 0.25);
    color: rgb(var(--accent));
  }

  /* ===== RESULT EXCERPT ===== */
  .search-result-excerpt {
    margin: 0 0 0.75rem 0;
    color: rgb(75, 85, 99);
    font-size: 0.875rem;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  [data-theme="dark"] .search-result-excerpt {
    color: rgb(156, 163, 175);
  }

  /* ===== RESULT META ===== */
  .search-result-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    flex-wrap: wrap;
  }

  .search-result-category {
    background: rgb(var(--accent));
    color: white;
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .search-result-difficulty {
    background: rgb(243, 244, 246);
    color: rgb(55, 65, 81);
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.75rem;
    text-transform: capitalize;
    border: 1px solid rgb(229, 231, 235);
  }

  [data-theme="dark"] .search-result-difficulty {
    background: rgb(55, 65, 81);
    color: rgb(209, 213, 219);
    border-color: rgb(75, 85, 99);
  }

  .search-result-date {
    color: rgb(107, 114, 128);
    font-weight: 500;
    margin-left: auto;
    font-size: 0.75rem;
  }

  [data-theme="dark"] .search-result-date {
    color: rgb(156, 163, 175);
  }

  /* ===== MOBILE RESPONSIVE ===== */
  @media (max-width: 640px) {
    .search-modal {
      padding: 1rem;
    }

    .search-container {
      max-height: calc(100vh - 2rem);
      border-radius: 12px;
    }

    .search-header {
      padding: 1.25rem;
    }

    .search-input {
      font-size: 16px; /* Prevents zoom on iOS */
      padding: 1rem 3rem 1rem 3rem;
    }

    .search-filters {
      flex-direction: column;
      gap: 0.5rem;
    }

    .filter-select {
      width: 100%;
    }

    .search-results {
      padding: 0.25rem;
    }

    .search-result-content {
      padding: 0.875rem;
    }

    .empty-state-title {
      font-size: 1rem;
    }

    .empty-state-description {
      font-size: 0.8125rem;
    }
  }

  /* ===== FOCUS MANAGEMENT ===== */
  .search-modal.active .search-input {
    animation: searchFocusIn 0.2s ease-out;
  }

  @keyframes searchFocusIn {
    from {
      opacity: 0;
      transform: scale(0.98);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* ===== SCROLLBAR STYLING ===== */
  .search-results::-webkit-scrollbar {
    width: 6px;
  }

  .search-results::-webkit-scrollbar-track {
    background: transparent;
  }

  .search-results::-webkit-scrollbar-thumb {
    background: rgb(203, 213, 225);
    border-radius: 3px;
  }

  .search-results::-webkit-scrollbar-thumb:hover {
    background: rgb(148, 163, 184);
  }

  [data-theme="dark"] .search-results::-webkit-scrollbar-thumb {
    background: rgb(55, 65, 81);
  }

  [data-theme="dark"] .search-results::-webkit-scrollbar-thumb:hover {
    background: rgb(75, 85, 99);
  }
</style>