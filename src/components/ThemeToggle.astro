---
// Theme Toggle Button
import { Sun, Moon } from 'lucide-react';
---

<button
  id="theme-toggle-btn"
  aria-label="Toggle theme"
  title="Toggle theme"
  class="header-btn theme-toggle-btn"
>
  <Sun size={18} class="theme-icon theme-icon-sun" data-sun-icon aria-hidden="true" />
  <Moon size={18} class="theme-icon theme-icon-moon" data-moon-icon aria-hidden="true" />
</button>

<style>
  .theme-icon {
    display: none;
  }

  .theme-icon.visible {
    display: inline;
  }
</style>

<script>
  // Theme toggle functionality
  function initThemeToggle() {
    const button = document.getElementById('theme-toggle-btn');
    if (!button) return;

    const sunIcon = button.querySelector('[data-sun-icon]');
    const moonIcon = button.querySelector('[data-moon-icon]');

    function updateIcons() {
      const currentTheme = window.theme?.getTheme();
      const resolvedTheme = currentTheme === "auto" ? window.theme?.getSystemTheme() : currentTheme;

      if (resolvedTheme === "dark") {
        if (sunIcon) sunIcon.classList.add("visible");
        if (moonIcon) moonIcon.classList.remove("visible");
      } else {
        if (sunIcon) sunIcon.classList.remove("visible");
        if (moonIcon) moonIcon.classList.add("visible");
      }
    }

    button.addEventListener('click', () => {
      const currentTheme = window.theme?.getTheme();
      const newTheme = currentTheme === "dark" ? "light" : "dark";
      window.theme?.setTheme(newTheme);
    });

    // Initial update
    updateIcons();

    // Listen for theme changes
    document.addEventListener("theme-changed", updateIcons);
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initThemeToggle);
  } else {
    initThemeToggle();
  }
</script>